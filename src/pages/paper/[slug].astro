    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Main Paper Content -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Paper Header -->
        <div class="card">
          <!-- ConSOLE Edition Badge -->
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
              <span class="px-4 py-2 bg-primary-100 text-primary-800 font-semibold rounded-full">{paper.edition}</span>
              <span class="text-text-secondary font-mono">{paper.year}</span>
              <span class="text-text-secondary">•</span>
              <span class="text-text-secondary">{paper.console_venue}</span>
            </div>
                         <div class="flex items-center space-x-2">
               <button class="p-2 text-text-secondary hover:text-accent transition-smooth" title="Share paper">
                 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
                 </svg>
    </button>
             </div>
          </div>

          <!-- Paper Title -->
          <h1 class="text-3xl lg:text-4xl font-crimson font-semibold text-primary mb-6 leading-tight">
            {paper.title}
          </h1>

          <!-- Author Information -->
          <div class="flex flex-wrap items-center gap-4 mb-6">
            <div class="flex items-center space-x-3">
              <div>
                <h3 class="font-semibold text-primary">{paper.authors.join(', ')}</h3>
                <div class="text-sm text-text-secondary">
                  {Array.isArray(paper.affiliation) ? paper.affiliation.map(affil => (
                    <p>{affil}</p>
                  )) : <p>{paper.affiliation}</p>}
                </div>
              </div>
            </div>
            <div class="flex items-center space-x-2 text-sm text-text-secondary">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span>{paper.corresponding_email}</span>
            </div>
          </div>

          <!-- Research Tags -->
          <div class="flex flex-wrap gap-2 mb-6">
            {paper.keywords.map(keyword => (
              <span class="px-3 py-1 bg-accent-100 text-accent-700 text-sm font-medium rounded-full">{keyword}</span>
            ))}
          </div>

          
        </div>

        <!-- Abstract Section -->
        <div class="card">
          <h2 class="text-2xl font-crimson font-semibold text-primary mb-4">Abstract</h2>
          <div class="prose prose-lg max-w-none text-text-primary">
            <p class="mb-4">
              {paper.abstract}
            </p>
            
          </div>
        </div>

        

        <!-- Download and Citation Section -->
        <div class="card">
          <h2 class="text-2xl font-crimson font-semibold text-primary mb-4">Access & Citation</h2>
          <div class="grid md:grid-cols-2 gap-6">
            <!-- Download Options -->
            <div>
              <h3 class="font-semibold text-primary mb-3">Download Options</h3>
              <div class="space-y-2">
                <a href={paper.pdf_url} target="_blank" class="w-full flex items-center justify-between p-3 border border-border rounded-lg hover:bg-surface transition-smooth">
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <div>
                      <div class="font-medium">Full Paper PDF</div>
                      <div class="text-sm text-text-secondary">Complete paper</div>
                    </div>
                  </div>
                  <span class="text-sm text-text-secondary font-mono"></span>
                </a>
              </div>
            </div>

            <!-- Citation Formats -->
            <div>
              <h3 class="font-semibold text-primary mb-3">Citation Formats</h3>
              <div class="space-y-2">
                <div class="p-3 border border-border rounded-lg">
                  <div class="flex items-center justify-between mb-2">
                    <span class="font-medium text-sm">APA Style</span>
                    <button id="copy-apa-btn" class="text-accent hover:text-accent-600 transition-smooth text-sm">Copy</button>
                  </div>
                  <p class="text-sm text-text-secondary font-mono" id="apa-citation">
                    {apaCitation}
                  </p>
                </div>
                <div class="p-3 border border-border rounded-lg">
                  <div class="flex items-center justify-between mb-2">
                    <span class="font-medium text-sm">BibTeX</span>
                    <button id="copy-bibtex-btn" class="text-accent hover:text-accent-600 transition-smooth text-sm">Copy</button>
                  </div>
                  <p class="text-sm text-text-secondary font-mono" id="bibtex-citation">
                    {bibtexCitation}
                  </p>
                </div>
              </div>
            </div>
          </div>

          
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Related Works -->
        {relatedPapers.length > 0 && (
          <div class="card">
            <h3 class="text-xl font-crimson font-semibold text-primary mb-4">Related Works</h3>
            <div class="space-y-4">
                             {relatedPapers.slice(0, 3).map(relatedPaper => relatedPaper && (
                 <div class="p-3 border border-border rounded-lg hover:bg-surface transition-smooth cursor-pointer">
                   <h4 class="font-semibold text-primary text-sm mb-1">
                     <a href={`/paper/${relatedPaper.slug}`}>{relatedPaper.title}</a>
                   </h4>
                   <p class="text-xs text-text-secondary mb-2">{relatedPaper.edition} • {relatedPaper.authors[0]}</p>
                   <div class="flex items-center justify-between text-xs text-text-secondary">
                     <span>{relatedPaper.year}</span>
                     <span class="flex items-center space-x-1">
                       
                     </span>
                   </div>
                 </div>
               ))}
            </div>
            <div class="mt-4">
              <a href="/papers" class="text-accent hover:text-accent-600 transition-smooth text-sm font-medium">View all related papers →</a>
            </div>
          </div>
        )}

        
      </div>
    </div>
  </main>
  <!-- Footer -->
  <footer class="bg-primary text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-4 gap-8">
        <!-- Brand Column -->
        <div class="md:col-span-2">
          <div class="flex items-center space-x-3 mb-4">
            <img src="/logo.png" alt="SOLE Archive" class="w-8 h-8 object-contain" loading="eager" style="filter: invert(1);" />
            
            <div>
              <h3 class="text-xl font-crimson font-semibold">SOLE Archive</h3>

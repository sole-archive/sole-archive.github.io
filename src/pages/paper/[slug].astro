---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import papers from '../../content/papers.json';

export async function getStaticPaths() {
  return papers.map(paper => ({
    params: { slug: paper.slug },
    props: { paper }
  }));
}

const { paper } = Astro.props;

// Find related papers
const relatedPapers = paper.related_slugs?.map(slug => 
  papers.find(p => p.slug === slug)
).filter(Boolean) || [];

// Generate citation formats
const apaCitation = `${paper.authors.join(', ')} (${paper.year}). ${paper.title.toLowerCase()}. In Proceedings of ${paper.edition}${paper.editors ? `, edited by ${paper.editors.join(', ')}` : ''}, (pp. ${paper.pages}).`;
const bibtexCitation = `@inproceedings{${paper.slug},\n  title={${paper.title}},\n  author={${paper.authors.join(' and ')}},\n  booktitle={Proceedings of ${paper.edition}},\n  year={${paper.year}},\n  pages={${paper.pages}}${paper.editors ? `,\n  editor={${paper.editors.join(' and ')}}` : ''}\n}`;
---

<Layout
  title={`${paper.title} - SOLE Archive`}
  description={paper.abstract}
  ogImage={`/images/papers/${paper.slug}.jpg`}  
  url={`https://sole.example.org/paper/${paper.slug}`}
/>

  <Navigation currentPage="papers" />
  
  <!-- Breadcrumb Navigation -->
  <section class="bg-surface py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center space-x-2 text-sm">
        <a href="/" class="text-text-secondary hover:text-primary transition-smooth">Home</a>
        <svg class="w-4 h-4 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <a href="/papers" class="text-text-secondary hover:text-primary transition-smooth">{paper.edition}</a>
        <svg class="w-4 h-4 text-text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-primary font-medium">{paper.title}</span>
      </nav>
    </div>
  </section>


      </div>

      <div class="border-t border-primary-700 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
        <p class="text-primary-200 text-sm">© 2025 SOLE Archive. Website built by <a href="https://tomsgrizzi.github.io/" class="hover:text-white transition-smooth">Tommaso Sgrizzi</a>.</p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          
        </div>
      </div>
    </div>
  </footer>
</Layout>

<script>
  // Copy to clipboard functionality
  function copyToClipboard(elementId: string, buttonElement: HTMLElement) {
    const element = document.getElementById(elementId);
    if (!element) return;
    
    const text = element.textContent || element.innerText || '';
    
    if (navigator.clipboard) {
      navigator.clipboard.writeText(text).then(function() {
        // Show success feedback
        const originalText = buttonElement.textContent || '';
        buttonElement.textContent = 'Copied!';
        buttonElement.classList.add('text-green-600');
        buttonElement.classList.remove('text-accent');
        
        setTimeout(function() {
          buttonElement.textContent = originalText;
          buttonElement.classList.remove('text-green-600');
          buttonElement.classList.add('text-accent');
        }, 2000);
      }).catch(function(err) {
        console.error('Failed to copy text: ', err);
        // Fallback to execCommand
        fallbackCopyToClipboard(text, buttonElement);
      });
    } else {
      // Fallback for older browsers
      fallbackCopyToClipboard(text, buttonElement);
    }
  }
  
  // Fallback copy function for older browsers
  function fallbackCopyToClipboard(text: string, buttonElement: HTMLElement) {
    const textArea = document.createElement('textarea');
    textArea.value = text;
    textArea.style.position = 'fixed';
    textArea.style.left = '-999999px';
    textArea.style.top = '-999999px';
    document.body.appendChild(textArea);
    textArea.focus();
    textArea.select();
    
    try {
      const successful = document.execCommand('copy');
      if (successful) {
        // Show success feedback
        const originalText = buttonElement.textContent || '';
        buttonElement.textContent = 'Copied!';
        buttonElement.classList.add('text-green-600');
        buttonElement.classList.remove('text-accent');
        
        setTimeout(function() {
          buttonElement.textContent = originalText;
          buttonElement.classList.remove('text-green-600');
          buttonElement.classList.add('text-accent');
        }, 2000);
      }
    } catch (err) {
      console.error('Fallback copy failed: ', err);
    }
    
    document.body.removeChild(textArea);
  }

  // Initialize copy buttons when DOM is loaded
  document.addEventListener('DOMContentLoaded', function() {
    // APA citation copy button
    const copyApaBtn = document.getElementById('copy-apa-btn');
    if (copyApaBtn) {
      copyApaBtn.addEventListener('click', function() {
        copyToClipboard('apa-citation', this as HTMLElement);
      });
    }
    
    // BibTeX citation copy button
    const copyBibtexBtn = document.getElementById('copy-bibtex-btn');
    if (copyBibtexBtn) {
      copyBibtexBtn.addEventListener('click', function() {
        copyToClipboard('bibtex-citation', this as HTMLElement);
      });
    }
  });

  document.addEventListener('DOMContentLoaded', function() {
    const shareButton = document.querySelector('button[title="Share paper"]');
    if (shareButton && navigator.share) {
      shareButton.addEventListener('click', async () => {
        try {
          await navigator.share({
            title: document.title,
            text: `${document.title}`,
            url: window.location.href
          });
        } catch (err) {
          console.error('Error sharing:', err);
        }
      });
    }
  });
</script>
